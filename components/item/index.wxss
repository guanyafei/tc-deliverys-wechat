/**index.wxss**/
.order_item{
  background: rgb(255, 253, 253);
  border-radius: 10rpx;
  padding: 15rpx 0 12rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.copy_icon{
    width: 23rpx;
    height: 27rpx;
    margin-left: 19rpx;
}
.item_top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: rgb(128, 128, 128);
    font-size: 27rpx;
    padding: 0 30rpx;
}
.order_no{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.carriers{
    color: rgb(255, 79, 0);
    font-size: 27rpx;
}
.item_bottom{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 13rpx 30rpx 0;
    border-top: 2rpx solid rgb(212, 210, 210);
    box-sizing: border-box;
}
.time{
    color: rgb(128, 128, 128);
    font-size: 23rpx;
}
.btn,.pay_btn{
    width: 115rpx;
    height: 48rpx;
    border-radius: 60rpx;
    border: 2rpx solid rgba(0, 0, 0, 0.3);
    box-sizing: border-box;
    color: rgb(51, 51, 51);
    font-size: 23rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.pay_btn{
    border: 2rpx solid rgba(0, 0, 0, 0);
    background: rgb(8, 23, 227);
    color: rgb(255, 255, 255);
}
.item_middle{
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.status{
    max-width: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.arrow{
    width: 58rpx;
    height: 15rpx;
    margin-bottom: 6rpx;
}
.status text{
    color: rgb(104, 103, 103);
    font-size: 25rpx;
}
.place{
    color: rgb(104, 103, 103);
    font-size: 38rpx;
    font-weight: 700;
    margin-bottom: 6rpx;
    max-width: 230rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.name{
    color: rgb(36, 36, 36);
    font-size: 23rpx;
    max-width: 230rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.consigner,.consignee{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.consigner{
    margin-right: 54rpx;
}
.consignee{
    margin-left: 54rpx;
}