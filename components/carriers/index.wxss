/**index.wxss**/
.carriers{
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.carriers .wrap{
  background: #FFFFFF; 
  position: absolute;
  bottom: 0;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.carriers .picker-top{
  background: rgb(238, 247, 255);
  font-size: 31rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #252525;
  text-align: left;
  position: relative;
  padding: 19rpx 31rpx;
}
.carriers .picker-top .close-wrap{
  position: absolute;
  top: 50%;
  right: 15rpx;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}
.carriers .picker-top .close{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 50%;
  right: 50%;
  margin-top: -13rpx;
  margin-right: -13rpx;
}
.carriers .picker-center{
  display: flex;
  flex-direction: column;
  margin-bottom: 60rpx;
  height: 576rpx;
  overflow-y: auto;
  padding: 0 31rpx;
  box-sizing: border-box;
}
.item{
  width: 100%;
  height: 136rpx;
  border-bottom: 2rpx solid rgb(245, 245, 245);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}
.item-left{
    display: flex;
    align-items: center;
}
.logo{
  width: 58rpx;
  height: 58rpx;
  border-radius: 29rpx;
}
.features{
    margin-left: 18rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.f-top{
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
}
.name{
    color: #111111;
    font-size: 31rpx;
    margin-right: 17rpx;
}
.traits{
    color: #FFFFFF;
    font-size: 19rpx;
    background-color: #F24B4B;
    padding: 4rpx 15rpx;
    border-radius: 19rpx 0px;
}
.f-bottom{
    display: flex;
    align-items: center;
    color: #999999;
    font-size: 19rpx;
}
.reminder{
    padding: 2rpx 8rpx;
    background: rgb(232, 242, 252);
    border-radius: 4rpx;
    margin-right: 8rpx;
}
.item-right{
    display: flex;
    align-items: center;
    justify-content: center;
}
.price{
    margin-left: 15rpx;
    margin-right: 10rpx;
}
.last-price{
    display: flex;
    align-items: center;
    margin-bottom: 2rpx;
}
.first-price{
    color: #999999;
    font-size: 23rpx;
    margin-right: 17rpx;
}
.discount-price{
    color: #F24B4B;
    font-size: 31rpx;
    font-weight: 700;
}
.renewa-price{
    color: #999999;
    font-size: 21rpx;
}
.next-price{
    color: #F29D4F;
    margin-left: 2rpx;
}
.radio{
    width: 48rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.item:last-child{
  border-bottom: none;
}
