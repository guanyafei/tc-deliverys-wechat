/**index.wxss**/
.route{
  background:#FFFFFF;
}
.route .route-item{
  display: flex;
  height: 162rpx;    
  margin-bottom: 6rpx;
}
.route .route-item .route-item-left{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 82rpx;
  flex-shrink: 0;
}
.route .route-item .route-item-left .route-item-year{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  text-align: right;
}
.route .route-item .route-item-left .route-item-time{
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.4);
  margin-top: 6rpx;
  text-align: right;
}
.route .route-item .route-item-center {
  position: relative;
  margin: 0 16rpx 0 10rpx;
  width: 34rpx;
  flex-shrink: 0;
}
.route .route-item .route-item-center image{
  width: 34rpx;
  height: 34rpx;
}
.route .route-item .route-item-center::after{
  content: '';
  height: 122rpx;
  width: 2rpx;
  border-left: 2rpx solid #C6C6C6;
  position: absolute;
  top: 40rpx;
  left: 50%;
  /* margin-left: -0rpx; */
  transform: translateX(-50%);
} 
.route .route-item .route-item-right {
  margin-top: -4rpx;
}
.route .route-item .route-item-right .route-item-right-top{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.route .route-item .route-item-right .route-item-right-bottom{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  margin-top: 12rpx;
}
.route .route-item .active .route-item-right-top{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #466FED;
}
.route .route-item .active .route-item-right-bottom{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3260EB;
  margin-top: 12rpx;
}
.route .route-item .route-item-center .dot{
  width: 12rpx;
  height: 12rpx;
  background: #D3D3D3;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 11rpx;
  margin-left: -8rpx;
}
.route .route-item .route-item-center .dot.active{
  background: #466FED;
}
.route .route-item .route-item-center .dot::before{
  content: '';
  height: 10rpx;
  width: 2rpx;
  border-left: 2rpx solid #C6C6C6;
  position: absolute;
  top: -17rpx;
  left: 50%;
}
.route .route-item .route-item-center .dot::after{
  content: '';
  height: 14rpx; 
  width: 2rpx;
  border-left: 2rpx solid #C6C6C6;
  position: absolute;
  top: 18rpx;
  left: 50%;
}
.route .route-item .route-item-center .dot.active::before{
  width:0;
  border-left:none;
}
.route .route-item:last-child .route-item-center::after{
  display:none
} 
.route .no-data{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.4);
  text-align: center;
  margin-top: 200rpx;
}
