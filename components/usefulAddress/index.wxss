.address{
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.address_box{
  height: 692rpx;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0rpx 0rpx;    
  position: absolute;
  bottom: 0;
  width: 100%;
  overflow: hidden;
  padding: 0 28rpx;
  box-sizing: border-box;
}
.address_top{
  height: 122rpx;
  background: #FFFFFF;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #252525;
  line-height: 122rpx;
  text-align: center;
  position: relative;
  border-bottom: 2rpx solid#D9D9D9;
  box-sizing: border-box;
}
.address_top .close{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -13rpx;
}
.address_tit{
  height: 68rpx;
  margin: 0 auto;
  line-height: 68rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #111111;
  display: flex;
  border-bottom: 2rpx solid#D9D9D9;
  box-sizing: border-box;
}
.address_tit .area{
	width: 154rpx;
  position: relative;
  text-align: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #3260EB;
}
.changeColor {
  font-weight: 600!important;
  position: relative;
}

.changeColor:before {
	content: '';
	position: absolute;
	left: 0;
  top: 65rpx;
	bottom: auto;
	right: auto;
	height: 4rpx;
	width: 154rpx;
	background-color: #417CF7;
	color:#417CF7;
}
.address_list{
  padding-bottom: 42rpx;
  margin: 0 auto;
  overflow: auto;
  height: 496rpx;
  margin-left: 36rpx;
  box-sizing: border-box;
  margin-top: 18rpx;
}
.address_list::-webkit-scrollbar {
  display: none;
}
.box{
  overflow: hidden;
  height: 454rpx;
}
.address_list>view{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
  padding: 14rpx 0;
}
.address .box .address_list .active{
  color: #3260EB;
}
