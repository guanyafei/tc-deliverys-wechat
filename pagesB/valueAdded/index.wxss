/**index.wxss**/
.added{
  min-height: 100vh;
  background: #F2F3F7;
}
.added .added-wrap{
  padding: 24rpx 16rpx 0;
  box-sizing: border-box;
}
.added .item{
  /* height: 330rpx; */
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx 34rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.added .item .item-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.added .item .item-top .item-top-left{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.added .item .item-top .selected{
  width: 28rpx;
  height: 28rpx;
}
.added .item .desc-one,.added .item .desc2-two{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
}
.added .item .desc-one{
  margin: 14rpx 0 22rpx;
}
.added .item .desc2-two{
  padding-top: 24rpx;
  border-top: 2rpx solid #D9D9D9;
}
.added .item .price{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #F38B00;
  text-align: right;
  margin-top: 6rpx;
}
.added .added-wrap .mask{
  height: 120rpx;
}
.added .added-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  height: 110rpx;
  background: #FFFFFF;
  padding: 14rpx 28rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.added .added-bottom .added-bottom-left{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
}
.added .added-bottom .added-bottom-left .price{ 
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #F38B00;
  margin-right: 22rpx;
}
.added .added-bottom .added-bottom-left .detail{ 
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.8);
  padding-left: 26rpx;
  border-left: 2rpx solid rgba(47, 47, 47, 0.6);
}
.added .added-bottom .added-bottom-right{
  width: 198rpx;
  height: 82rpx;
  background: #3260EB;
  border-radius: 54rpx;
  opacity: 0.9;
  text-align: center;
  line-height: 82rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}