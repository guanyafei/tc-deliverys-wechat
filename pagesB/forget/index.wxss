/**index.wxss**/
.forget{
  min-height: 100vh;
  background:#FFFFFF;
  padding: 156rpx 56rpx 68rpx;
  box-sizing: border-box;
}
.forget .tip{
  font-size: 48rpx;
  font-family: PingFangHK-Medium, PingFangHK;
  font-weight: 500;
  color: #466FED;
  margin-bottom: 80rpx;
}
.forget .account,.forget .password{
  width: 100%;
  height: 96rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  background: #F7F8FA;
  border-radius: 54rpx;
  margin-bottom: 36rpx;
  font-size: 28rpx;
  font-family: Helvetica;
  color: #222222;
}
.forget .account{
  padding-left: 160rpx;
  padding-top: 3rpx;
}
.forget .account-box{
  position: relative;
}
.forget .account-box .error{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E50808;
  position: absolute;
  bottom: -32rpx;
  left: 0;
  display: none;
}
.forget .active .account,.forget .active .password{
  border: 2rpx solid #E50808;
  box-sizing: border-box;
}
.forget .active .error{
  display: block;
}
.forget .account-box .zone{
  position: absolute;
  top: 50%;
  left: 50rpx;
  transform: translateY(-50%);
}
.forget .account-box .zone .r-arrow{
  width: 12rpx;
  height: 22rpx; 
  margin-left: 16rpx;
}
.forget .account-box .code-btn{
  position: absolute;
  top: 50%;
  right: 54rpx;
  z-index: 10;
  transform: translateY(-50%);
  font-size: 24rpx;
  font-family: PingFangHK-Medium, PingFangHK;
  font-weight: 500;
  color: #466FED;
  height: 96rpx;
  line-height: 96rpx;
 }
 .forget .login-btn{
  height: 96rpx;
  background: rgba(186, 210, 255, 1);
  border-radius: 54rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
 }
 .forget .login-btn.active{
  background: #3260EB;
 }
 .forget .go-login{
   float: right;
   font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3260EB;
  margin-top: 28rpx;
 }