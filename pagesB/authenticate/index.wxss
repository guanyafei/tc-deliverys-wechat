/**index.wxss**/
.authenticate{
  min-height: 100vh;
  background: #FFFFFF;    
  overflow: hidden;
}
.authenticate .tip{
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.8);
  text-align: center;
}
.authenticate .tip:first-child{
  margin-top: 80rpx;
}
.authenticate .mt{
  margin-top: 20rpx;
}
.authenticate .step-wrap{
  margin: 52rpx 56rpx 0;
}
.authenticate .step-wrap .step-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.authenticate .step-wrap .step-top .circle{
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: Helvetica;
  border-radius: 50%;
  color: #FFFFFF;
  background: #DDDDDD;
  position: relative;
}
.authenticate .step-wrap .step-top .line{
  flex: 1;
  height: 4rpx;
  background: #EEEEEE;
  position: relative;
}
.authenticate .step-wrap .step-top .circle .sub{
  width: 80rpx;
  position: absolute;
  top: 44rpx;
  margin-left: -40rpx;
  left: 50%;
  font-size: 20rpx;
  font-family: PingFangHK-Regular, PingFangHK;
  font-weight: 400;
  color: #AAAAAA;
}
.authenticate .step-wrap .step-top .active{
  background: #466FED;
}
.authenticate .step-wrap .step-top .active .sub{
  color: #466FED;
}
.authenticate .step-wrap .step-top .inside-line-b {
  height: 4rpx;
  width: 50%;
  background: #466FED;
  position: absolute;
  top: 0;
  left: 0;
}
.authenticate .step-wrap .step-top .inside-line-q {
  height: 4rpx;
  width: 100%;
  background: #466FED;
  position: absolute;
  top: 0;
  left: 0;
}
.authenticate .step-wrap .step-bottom{
 margin-top: 140rpx;
 display: flex;
 justify-content: center;
 align-items: center;
 flex-direction: column;
}
.authenticate .step-wrap .step-bottom .tel{
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.8);
  text-align: center;
  margin-bottom: 48rpx;
 }
 .authenticate .step-wrap .step-bottom .account{
   position: relative;
 }
 .authenticate .step-wrap .step-bottom .account .code{
   width: 638rpx;
   height: 96rpx;
   background: #F7F8FA;
   border-radius: 54rpx;
   padding-left: 54rpx;
   padding-right: 172rpx;
   box-sizing: border-box;
   font-size: 28rpx;
   font-family: PingFangHK-Medium, PingFangHK;
   font-weight: 500;
   color: rgba(47, 47, 47, 0.8);
 }
 .authenticate .step-wrap .step-bottom .qy .item:last-child .code{
   margin-top: 34rpx;
 }
 .authenticate .step-wrap .step-bottom .qy .code{
  padding-right: 54rpx;
}
.authenticate .step-wrap .step-bottom .qy  .error{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E50808;
  position: absolute;
  bottom: -32rpx;
  left: 0;
  display: none;
}
.authenticate .step-wrap .step-bottom .qy .item{
  position: relative;
}
.authenticate .step-wrap .step-bottom .qy .err-active .code{
  border: 2rpx solid #E50808;
  box-sizing: border-box;
}
.authenticate .step-wrap .step-bottom .qy .err-active .error{
  display: block;
}
 .authenticate .step-wrap .step-bottom .account .code-btn{
  position: absolute;
  top: 75%;
  right: 54rpx;
  transform: translateY(-50%);
  font-size: 24rpx;
  font-family: PingFangHK-Medium, PingFangHK;
  font-weight: 500;
  color: #466FED;
 }
 .authenticate .step-wrap .btn{
   width: 100%;
   height: 96rpx;
   background: rgba(192, 214, 255, 1);
   border-radius: 54rpx;
   font-size: 32rpx;
   font-family: PingFangHK-Medium, PingFangHK;
   font-weight: 500;
   color: #FFFFFF;
   text-align: center;
   line-height: 96rpx;
   margin-top: 268rpx;
 }
 .authenticate .step-wrap .active{
  background: rgba(50, 96, 235, 1);
 }
 .authenticate .step-wrap .error{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F38B00;
  margin: 8rpx 0 0 52rpx;
 }
 .authenticate .step-wrap .zccg {
   display: flex;
   flex-direction: column;
   align-items: center;
 }
 .authenticate .step-wrap .zccg .success{
  width: 406rpx;
  height: 222rpx;
 }
 .authenticate .step-wrap .zccg .success-tip{
  font-size: 32rpx;
  font-family: PingFangHK-Medium, PingFangHK;
  font-weight: 500;
  color: #222222;
  margin-top: 30rpx;
 }