/**index.wxss**/
.login{
  min-height: 100vh;
  background: #FFFFFF;
  position: relative;
}
.login .banner{
  width: 100%;
  height: 328rpx;
  background: #466FED;
  margin-bottom: 94rpx;
  position: relative;
}
.login .banner::after{
  content: "";
  width: 100%;
  height: 100rpx;
  background: #466FED;
  border-radius: 50%;
  position: absolute;
  bottom: -52rpx;
}
.login .banner .login-logo{
   width: 346rpx;
   height: 76rpx;
   position: absolute;
   top: 232rpx;
   left: 50%;
   margin-left: -173rpx;
   z-index: 2;
}
.login .sub{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(24, 24, 24, 0.8);
  text-align: center;
}
.login .login-account{
  margin: 74rpx auto 0;
  width: 638rpx;
}
.login .login-account .account,.login .login-account .password{
  width: 100%;
  height: 96rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  background: #F7F8FA;
  border-radius: 54rpx;
  margin-bottom: 36rpx;
  font-size: 28rpx;
  font-family: Helvetica;
  color: #222222;
}
.login .login-account .password{
  margin-bottom: 0;
}
.login .login-account .btn{
  width: 100%;
  height: 96rpx;
  margin: 98rpx auto 0;
  text-align: center;
  line-height: 96rpx;
  background: rgba(186, 210, 255, 1);
  border-radius: 54rpx;
  font-size: 32rpx;
  font-family: Helvetica;
  color: #FFFFFF;
}
.login .login-account .btn.active{
  background: rgba(50, 96, 235, 1);
}
.login .login-account .account-box{
  position: relative;
}
.login .login-account .account-box .error{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E50808;
  position: absolute;
  bottom: -32rpx;
  left: 0;
  display: none;
}
.login .login-account .active .account,.login .login-account .active .password{
  border: 2rpx solid #E50808;
  box-sizing: border-box;
}
.login .login-account .active .error{
  display: block;
}
.login .login-account .account-box .see{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 16rpx; 
  top: 50%;
  margin-top: -34rpx;
  z-index: 10;
  text-align: center;
  line-height: 60rpx;
}
.login .login-account .account-box .see-img{
  width: 30rpx;
  height: 30rpx;    
  vertical-align: middle;
}
.login .forget{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 638rpx;
  margin: 36rpx auto 0;
}
.login .forget .forget-left{
  display: flex;
}
.login .forget .forget-left .tip,.login .forget .forget-right{
  font-size: 24rpx;
  font-family: Helvetica;
  color: #777777;
}
.login .forget .forget-left .register{
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #3260EB;
  margin-left: 4rpx;
}
.login .terms{
  position: absolute;
  bottom: 36rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
}
.login .terms,.login .terms .privacy{
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(54, 54, 54, 1);
}
.login .terms .privacy{
  color: #3260EB;
}