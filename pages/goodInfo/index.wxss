/**index.wxss**/
.address_info{
  padding: 0rpx 20rpx;
  min-height: 100vh;
  background: #F2F3F7;
  overflow: auto;
}
.content{
    margin-top: 24rpx;
}
.detail{
    background: rgb(255, 253, 253);
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 12rpx 15rpx 90rpx;
    width: 100%;
    height: 313rpx;
}
.info{
    position: relative;
}
.btn_box{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: absolute;
    right: 19rpx;
    bottom: 27rpx;
}
.item{
    width: 115rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 24rpx;
    box-sizing: border-box;
    font-size: 27rpx;
}
.item:first-child{
    background: rgb(255, 255, 255);
    border: 2rpx solid rgba(0, 0, 0, 0.3);
    color: rgb(51, 51, 51);
    margin-right: 17rpx;
}
.item:last-child{
    background: rgb(8, 23, 227);
    border: 2rpx solid rgba(0, 0, 0, 0.3);
    color: rgb(254, 254, 254);
}
.user{
    margin-top: 24rpx;
    background: rgb(255, 253, 253);
    border-radius: 10rpx;
}
.user_item{
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid rgb(212, 210, 210);
    box-sizing: border-box;
}
.user_item:last-child{
    border-bottom: 0;
}
.user_text{
    padding: 36rpx 27rpx;
    text-align: right;
    font-size: 28rpx;
    flex: 1;
}
.label{
    font-size: 31rpx;
    margin-left: 27rpx;
}
.detail_box{
    margin-top: 24rpx;
    position: relative;
}
.detail_info{
    background: rgb(255, 253, 253);
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 12rpx 15rpx;
    width: 100%;
    height: 342rpx;
}
.arrow{
    width: 18rpx;
    height: 33rpx;
    margin-right: 27rpx;
}
.time{
    padding-right: 21rpx;
}
.time_label::before{
  content: '*';
  color: rgb(255, 0, 0);
}
.address_info .btn{
  width: 576rpx;
  height: 76.8rpx;
  position: absolute;
  bottom: 18rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgb(8, 23, 227);
  margin: 0 auto;
  text-align: center;
  line-height: 76.8rpx;
  font-size: 31rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgb(255, 255, 255);
}