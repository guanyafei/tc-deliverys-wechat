.order{
    min-height: 100vh;
    background: #F2F3F7;
    overflow: auto;
  }
.order_info{
    background: rgb(255, 253, 253);
    border-radius: 10rpx;
    margin: 24rpx 20rpx;
}
.item{
    border-bottom: 2rpx solid rgb(212, 210, 210);
    box-sizing: border-box;
    padding: 0rpx 19rpx;
    height: 154rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.items{
    border-bottom: 2rpx solid rgb(212, 210, 210);
    box-sizing: border-box;
    padding: 0rpx 19rpx;
    height: 96rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.item:last-child,.items:last-child{
    border-bottom: none;
}
.sender_img,.recipient_img{
    width: 48rpx;
    height: 48rpx;
    color: rgb(255, 255, 255);
    font-size: 35rpx;
    border-radius: 24rpx;
    text-align: center;
    line-height: 48rpx;
}
.sender_img{
    background: rgb(255, 79, 0);
}
.recipient_img{
    background: rgb(8, 23, 227);
}
.no_info{
    color: rgb(153, 153, 153);
    font-size: 31rpx;
    margin-left: 40rpx;
}
.user_box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 19rpx;
}
.user_info{
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
    font-size: 26rpx;
}
.tel{
   margin-left: 19rpx;
   color: #6A6969;
}
.address{
    font-size: 26rpx;
    width: 540rpx;

}
.loc_img{
    width: 38rpx;
    height: 43rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.book{
    position: absolute;
    right: 19rpx;
    display: flex;
    flex-direction: column;
}
.book::before{
    content: '';
    width: 2rpx;
    height: 28rpx;
    border-left: 2rpx solid rgb(212, 210, 210);
    position: absolute;
    top: 8rpx;
    left: -16rpx;
}
.user_text{
    padding: 36rpx 27rpx;
    text-align: right;
    font-size: 27rpx;
    flex: 1;
}
.label{
    font-size: 31rpx;
}
.arrow{
    width: 18rpx;
    height: 33rpx;
}

.label::before{
    content: '*';
    color: rgb(255, 0, 0);
  }
.tip.label::before{
    content: '';
  }
.goods_text{
    flex: 1;
    padding-right: 21rpx;
    font-size: 28rpx;
}
.summary{
    width: 100%;
    text-align: center;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    z-index: 2;
    background: rgb(255, 255, 255);
    font-size: 31rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 19rpx 48rpx 60rpx;
  }
  .sum_left{
      display: flex;
      flex-direction: column;
      justify-content: center;
  }
  .price{
      display: flex;
      align-items: center;
      margin-bottom: 27rpx;
  }
  .num{
      color: rgb(255, 0, 0);
  }
  .deal{
      display: flex;
      align-items: center;
      justify-content: start;
      font-size: 27rpx;
  }
  .subtitle{
      margin-left: 12rpx;
      color: #8D8D8D;
  }
  .icon{
      margin-left: -4rpx;
  }
  .desc{
      color: #0817E3;
  }
  .sum_right{
      padding: 15rpx 48rpx;
      background: rgb(8, 23, 227);
      border-radius: 8rpx;
      color: rgb(255, 255, 255);
      font-size: 31rpx;
  }