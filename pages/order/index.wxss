.order{
    padding: 0 20rpx;
    min-height: 100vh;
    background: #F2F3F7;
    overflow: auto;
  }
.order_info{
    background: rgb(255, 253, 253);
    border-radius: 10rpx;
    margin-top: 24rpx;
}
.item{
    border-bottom: 2rpx solid rgb(212, 210, 210);
    box-sizing: border-box;
    padding: 0rpx 19rpx;
    height: 154rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.items{
    border-bottom: 2rpx solid rgb(212, 210, 210);
    box-sizing: border-box;
    padding: 0rpx 19rpx;
    height: 96rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.item:last-child,.items:last-child{
    border-bottom: none;
}
.sender_img,.recipient_img{
    width: 48rpx;
    height: 48rpx;
    color: rgb(255, 255, 255);
    font-size: 35rpx;
    border-radius: 24rpx;
    text-align: center;
    line-height: 48rpx;
}
.sender_img{
    background: rgb(255, 79, 0);
}
.recipient_img{
    background: rgb(8, 23, 227);
}
.no_info{
    color: rgb(153, 153, 153);
    font-size: 31rpx;
    margin-left: 40rpx;
}
.user_box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 19rpx;
}
.user_info{
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
    font-size: 26rpx;
}
.tel{
   margin-left: 19rpx;
   color: rgb(153, 153, 153);
}
.address{
    font-size: 26rpx;
    width: 540rpx;

}
.loc_img{
    width: 38rpx;
    height: 43rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.book{
    position: absolute;
    right: 19rpx;
    display: flex;
    flex-direction: column;
}
.book::before{
    content: '';
    width: 2rpx;
    height: 28rpx;
    border-left: 2rpx solid rgb(212, 210, 210);
    position: absolute;
    top: 8rpx;
    left: -16rpx;
}
.user_text{
    padding: 36rpx 27rpx;
    text-align: right;
    font-size: 27rpx;
    flex: 1;
}
.label{
    font-size: 31rpx;
}
.arrow{
    width: 18rpx;
    height: 33rpx;
}

.label::before{
    content: '*';
    color: rgb(255, 0, 0);
  }
.tip.label::before{
    content: '';
  }
.goods_text{
    flex: 1;
    padding-right: 21rpx;
    font-size: 28rpx;
}