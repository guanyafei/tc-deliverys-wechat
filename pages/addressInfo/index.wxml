<view class="address_info">
  <view class="content">
     <view class="info">
        <textarea class="detail" maxlength="50" model:value="{{params.name}}" placeholder="请粘贴或输入文本，点击识别" placeholder-style="color: rgba(47, 47, 47, 0.4);font-size: 27rpx;"/>
        <view class="btn_box">
          <view class="item ">清空</view>
          <view class="item">识别</view>
        </view>
     </view>
     <view class="user">
       <view class="user_item">
            <text class="label">姓名</text>
            <input class="user_text" type="text" maxlength="50" model:value="{{params.name}}" placeholder="请输入姓名" placeholder-style="color: rgba(47, 47, 47, 0.4);font-size: 28rpx;text-align: right;"/>
       </view>
       <view class="user_item">
            <text class="label">手机号</text>
            <input class="user_text" type="text" maxlength="50" model:value="{{params.name}}" placeholder="请输入手机号" placeholder-style="color: rgba(47, 47, 47, 0.4);font-size: 28rpx;text-align: right;"/>
       </view>
     </view>
     <view class="detail_box">
        <textarea class="detail_info" maxlength="50" model:value="{{params.name}}" placeholder="详细地址：街道/小区/楼号/门牌号" placeholder-style="color: rgba(47, 47, 47, 0.4);font-size: 27rpx;"/>
        <view class="save_box">
          <text class="save_label">保存到地址簿</text>
          <switch color="#2678FF" checked="{{switch1Checked}}" bindchange="switch1Change"/>
        </view>
     </view>
  </view>
  <view class="btn"  wx:if="{{mgeType=='0'}}" bindtap="save">确定</view>
  <address wx:if="{{showAddress}}"  addersObj="{{addersObj}}" bindcloseAddress="closeAddress" bindgetAddress="getAddress"></address>
</view>
