/**index.wxss**/
.home{
  padding: 18rpx 20rpx;
  background: #F2F3F7;
  height: calc(100vh - 56rpx);
}
.banner{
  width: 100%;
  height: 348rpx; 
  border-radius: 10rpx;
}
.swiper_box{
    height: 100%;
}
.notice{
    width: 100%;
    height: 120rpx;
    background: rgb(255, 253, 253);
    border-radius: 10rpx;
    margin-top: 24rpx;
    display: flex;
    align-items: center;
    padding-left: 65rpx;
    box-sizing: border-box;
}
.horn{
    width: 49rpx;
    height: 36rpx;
}
.notice_list{
    flex: 1;
    height: 42rpx;
    margin-left: 30rpx;
}
.tip{
    color: rgb(0, 0, 0);
    font-size: 28rpx;
    width: 550rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.order{
    margin-top: 24rpx;
    display: flex;
    justify-content: space-between;
    height: 378rpx;
}
.order_left{
    width: 360rpx;
    height: 100%;
    background: rgb(8, 23, 227);
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    box-sizing: border-box;
}
.order_right{
    width: 360rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.order_img{
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 14rpx;
}
.order_tip{
    color: rgb(255, 255, 255);
    font-size: 48rpx;
}
.order_top,.order_bottom{
    width: 360rpx;
    height: 176rpx;
    background: rgb(255, 255, 255);
    border-radius: 10rpx;
}

.box{
  width: 100%;
  height: 552rpx;
  background: #FFFFFF;
  border-radius: 6px;
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.item{
  width: 347rpx;
  height: 184rpx;
  box-sizing: border-box;
  flex-shrink: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  
}
.item:nth-of-type(1),.item:nth-of-type(3){
  border-bottom: 2rpx solid #DDDDDD;
  border-right: 2rpx solid #DDDDDD;
}
.item:nth-of-type(2),.item:nth-of-type(4){
  border-bottom: 2rpx solid #DDDDDD;
}
.item:nth-of-type(5){
  border-right: 2rpx solid #DDDDDD;
}
.item .logo{
  width: 48rpx;
  height: 48rpx;
  margin: 0 24rpx 0 46rpx;
}
.item .nav{
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}