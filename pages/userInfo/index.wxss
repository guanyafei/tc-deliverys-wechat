/**index.wxss**/
.user-info{
  min-height: 100vh;
  background: #F2F3F7;
}
.user-info .user-type{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:24rpx 28rpx 0;
  background-color: #fff;
}
.user-info .user-type-left{
  display: flex;
  align-items: center;
}
.user-info .user-type-left image{
  width: 44rpx;
  height: 52rpx;
  margin-right: 12rpx;
}
.user-info .user-type-left text{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
  margin-left: 12rpx;
}
.user-info .user-type-right image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}
.user-info .info-item{
  padding: 0 28rpx;
  background-color: #fff;
}
.user-info .info-item .item{
  height: 120rpx;
  border-bottom: 2rpx solid #D7D7D7;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.user-info .info-item .item .name{
  flex: 1;
}
.user-info .info-item .item  input{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
}
.user-info .info-item .item .error{
  position: absolute;
  bottom: -32rpx;
  left: 0;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E50808;
  display: none;
}
.user-info .info-item  .item .error-box .error-hide{
  display: none;
}
.user-info .info-item  .item .error.error2{
  left: inherit;
  right: 0;
}
.user-info .info-item  .item.error-active .error{
 display: block;
}
.user-info .info-item  .tel-box{
  display: flex;
  align-items: center;
}
.user-info .info-item  .tel-box .line{
  width: 46rpx;
  border-top: 2rpx solid #979797;
  margin: 0 24rpx;
}
.user-info .info-item  .tel-box .phone{
  width: 190rpx;
  text-align: right;
}
.user-info .info-item  .tel-box .zone-code{
  width: 116rpx;
}
.user-info .info-item  .error-active{
  border-bottom-color: #E50808;
}
.user-info .info-item  .item .error{
  position: absolute;
  bottom: -32rpx;
  left: 0;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E50808;
  display: none;
}
.user-info .info-item  .error-active .error{
 display: block;
}
.user-info .info-item .item:last-child{
  border-bottom: none;
  justify-content: flex-start;
}
.user-info .info-item .item .img{
  width: 14rpx;
  height: 24rpx;
}
.user-info .info-item .item:last-child image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.user-info .info-item .item:last-child text{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
}
.user-info .history{
  margin-top: 50rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.user-info .history .sub{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.8);
  margin-bottom: 18rpx;
}
.user-info .history .item{
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 18rpx 44rpx;
  margin-bottom: 24rpx;
}
.user-info .history .item .item-top{
  display: flex;
}
.user-info .history .item .item-top .name,.user-info .history .item .item-top .phone{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.user-info .history .item .item-top .phone{
  margin-left: 28rpx;
  margin-right: 28rpx;
}
.user-info .history .item .item-top .address{
  background: #466FED;
  border-radius: 4rpx;
  padding: 2rpx 12rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.user-info .history .item .company,.user-info .history .item .address{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
}
.user-info .history .item .company{
  margin: 8rpx 0;
}
.user-info .mask{
  height: 140rpx;
}
.user-info .user-bottom{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  background-color: #F2F3F7;
  padding-top: 20rpx;
}
.user-info .btn{
  height: 96rpx;
  width: 638rpx;
  background: rgba(186, 210, 255, 1);
  border-radius: 27px;
  opacity: 0.9;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin: 0 auto;
  text-align: center;
  line-height: 96rpx;
}
.user-info .btn.active{
  background: rgba(50, 96, 235, 1);
}