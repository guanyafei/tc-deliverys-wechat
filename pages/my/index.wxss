/**index.wxss**/
.my{
  background: #F2F3F7;
  height: 100vh;
  padding: 18rpx 20rpx ;
}
.info{
    width: 100%;
    height: 221rpx;
    border-radius: 10rpx;
    background: rgb(255, 253, 253);
    display: flex;
    align-items: center;
}
.avatar{
    width: 96rpx;
    height: 96rpx;
    margin-left: 31rpx;
}
.user{
    color: rgb(106, 106, 107);
    font-size: 31rpx;
    font-weight: 500;
    margin-left: 38rpx;
    width: 580rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.menu{
    width: 100%;
    margin-top: 24rpx;
    background: rgb(255, 253, 253);
    box-sizing: border-box;
    border-radius: 10rpx;
}
.menu_item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 115rpx;
    padding: 0rpx 23rpx;
}
.menu_item:nth-child(2n+1){
    border-bottom: 2rpx solid rgb(212, 210, 210);
}
.arrow{
    width: 17rpx;
    height: 33rpx;
}
.menu_name{
    color: rgb(106, 105, 105);
    font-size: 31rpx;
}