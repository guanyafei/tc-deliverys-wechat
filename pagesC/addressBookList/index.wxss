/**index.wxss**/
.address-book{
  min-height: 100vh;
  background: #F2F3F7;
  overflow: hidden;
}
.address-book .book-top{
  background-color: #ffffff;
  position: relative;
  padding: 0 28rpx 34rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.address-book .book-top .search{
  height: 70rpx;
  background: #F7F7F7;
  border-radius: 40rpx;    
  font-size: 28rpx;
  padding: 0 24rpx 0 76rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F
}
.address-book .book-top .search-img{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  left: 50rpx;
  top: 22rpx;
}
.address-book .result{
  margin: 0 16rpx 24rpx;
}
.address-book .result .item{
  padding: 32rpx 30rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: flex-start;
}
.address-book .result .item .item-right{
  width: 100%;
}
.address-book .result .item .item-left{
  display: flex;
  margin: 8rpx 22rpx 0 -12rpx;   
}
.address-book .result .item .item-left .select{
  width: 24rpx;
  height: 24rpx;
}
.address-book .result .item .item-top{
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.address-book .result .item .item-top .name,.address-book .result .item .item-top .tel{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.address-book .result .item .item-top .tel{
  margin: 0 16rpx 0 32rpx;
}
.address-book .result .item .item-top .tip{
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  background: #466FED;
  border-radius: 4rpx;
  padding: 2rpx 12rpx;
}
.address-book .result .item .item-top .tip-2{
  border-radius: 4rpx;
  border: 2rpx solid #3260EB;
  box-sizing: border-box;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #3260EB;
  padding: 2rpx 12rpx;
}
.address-book .result .item .company,.address-book .result .item .address{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
}
.address-book .result .item .company{
  margin-bottom: 8rpx;
}
.address-book .result .item .address{
  margin-bottom: 40rpx;
}