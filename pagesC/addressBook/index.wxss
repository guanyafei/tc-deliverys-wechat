/**index.wxss**/
.address-book{
  min-height: 100vh;
  background: #F2F3F7;
}
.address-book .book-top{
  background-color: #ffffff;
  position: relative;
  padding: 0 28rpx 34rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.address-book .book-top .search{
  height: 70rpx;
  background: #F7F7F7;
  border-radius: 40rpx;    
  font-size: 28rpx;
  padding: 0 24rpx 0 76rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F
}
.address-book .book-top .search-img{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  left: 50rpx;
  top: 22rpx;
}
.address-book .result{
  margin: 0 16rpx 24rpx;
}
.address-book .result .item{
  padding: 32rpx 30rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: flex-start;
}
.address-book .result .item .item-right{
  width: 100%;
}
.address-book .result .item .item-left{
  display: flex;
  width: 46rpx;  
}
.address-book .result .item .item-left .select{
  width: 24rpx;
  height: 24rpx;
  margin-top: 8rpx;
}
.address-book .result .item .item-top{
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.address-book .result .item .item-top .name,.address-book .result .item .item-top .tel{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.address-book .result .item .item-top .tel{
  margin: 0 16rpx 0 32rpx;
}
.address-book .result .item .item-top .tip{
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  background: #466FED;
  border-radius: 4rpx;
  padding: 2rpx 12rpx;
}
.address-book .result .item .item-top .tip-2{
  border-radius: 4rpx;
  border: 2rpx solid #3260EB;
  box-sizing: border-box;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #3260EB;
  padding: 2rpx 12rpx;
}
.address-book .result .item .company,.address-book .result .item .address{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
}
.address-book .result .item .company{
  margin-bottom: 8rpx;
}
.address-book .result .item .address{
  margin-bottom: 40rpx;
}
.address-book .result .item .item-bottom {
  display: flex;    
  justify-content: space-between;
  align-items: center;
}
.address-book .result .item .item-bottom .item-bottom-left{
  background: #466FED;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  padding: 8rpx 14rpx;
}
.address-book .result .item .item-bottom .item-bottom-left.default{
  background: #DADADA;
}
.address-book .result .item .item-bottom .active{
  background: #DADADA;
  color: #FFFFFF;
}
.address-book .result .item .item-bottom .item-bottom-right{
  display: flex;
  align-items: center;
}
.address-book .result .item .item-bottom .edit .img{
  width: 32rpx;
  height: 28rpx;    
  vertical-align: middle;
}
.address-book .result .item .item-bottom .del .img{
  width: 32rpx;
  height: 32rpx;    
  vertical-align: middle;
}
.address-book .result .item .item-bottom .del {
  width: 50rpx;
  text-align: right;
}
.address-book .result .item .item-bottom .edit {
  width: 50rpx;
  text-align: center;
  margin-right: 20rpx;
}
.address-book .mask{
  height: 134rpx;
}
.address-book .btn-wrap{
  height: 134rpx;
  width: 100%;
  background-color: #ffffff;
  padding: 20rpx 46rpx 0;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  z-index: 2;
}
.address-book .btn-wrap .del-wrap,.address-book .btn-wrap .manage-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address-book .btn-wrap .manage,.address-book .btn-wrap .add{
  width: 290rpx;
  height: 96rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  text-align: center;
  line-height: 96rpx;
  border-radius: 54rpx;
}
.address-book .btn-wrap .manage{
  border: 2rpx solid #466FED;
  color: #466FED;
}
.address-book .btn-wrap .add{
  background-color: #3260EB;
  color: #FFFFFF;
}