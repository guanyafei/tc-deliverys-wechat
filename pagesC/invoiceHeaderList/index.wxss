/**index.wxss**/
.header-list{
  min-height: 100vh;
  background:#F2F3F7;
}
.no-data{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  margin-top: 50%;
}
.header-list .list-top{
  background: #FFFFFF;
  position: relative;
  padding: 16rpx 28rpx 30rpx;
}
.header-list .list-top .search{
  height: 70rpx;
  background: #F7F7F7;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 24rpx 0 76rpx;
  box-sizing: border-box;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
}
.header-list .list-top .search-img{
  width: 26rpx;
  height: 26rpx;    
  position: absolute;
  top: 50%;
  left: 54rpx;
  margin-top: -18rpx;
}
.header-list .list-wrap{
  margin-top: 24rpx;
  padding: 0 16rpx;
  overflow: hidden;
}
.header-list .list-wrap .item{
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
}
.header-list .list-wrap .item .item-top{
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}
.header-list .list-wrap .item .item-top .item-top-left{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.header-list .list-wrap .item .item-top .item-top-right{
  background: #466FED;
  border-radius: 4rpx;
  padding: 2rpx 12rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;    
  width: 64rpx;
  height: 32rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}
.header-list .list-wrap .item  .item-center{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  margin-bottom: 14rpx;
}
.header-list .list-wrap .item .item-bottom{
  width: 134rpx;
  height: 40rpx;
  border-radius: 4rpx;
  border: 2rpx solid #3260EB;
  box-sizing: border-box;
  text-align: center;
  line-height: 39rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #466FED;
}