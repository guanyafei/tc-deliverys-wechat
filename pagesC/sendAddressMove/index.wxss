/**index.wxss**/
.address-apply{
  min-height: 100vh;
  background: #F2F3F7;
  overflow: hidden;
}
.address-apply .wrap{
  width: 718rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 24rpx 16rpx;
  padding: 13rpx;
  box-sizing: border-box;
}
.address-apply .wrap .item-top{
  display: flex;
  align-items: center;
}
.address-apply .wrap .address-img{
  width: 44rpx;
  height: 50rpx;
  margin-right: 28rpx;
}
.address-apply .wrap .title{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.address-apply .wrap .account,.address-apply .wrap .company,.address-apply .wrap .detail-address{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
  display: flex;
}
.address-apply .wrap .name{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  width: 158rpx;    
  display: table
}
.address-apply .wrap .account{
  margin-top: 30rpx;
}
.address-apply .wrap .company,.address-apply .wrap .detail-address{
  margin-top: 10rpx;
}
.address-apply .wrap .item{
  width: 100%;
  height: 80rpx;
  border-radius: 6rpx;
  border: 2rpx solid #C9C9C9;
  box-sizing: border-box;
  padding: 0 18rpx;
  margin-top: 24rpx;
}
.address-apply .wrap .item:last-child{
  margin-bottom: 24rpx;
}
.address-apply .wrap .error{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #E50808;
  /* position: absolute;
  bottom: -32rpx;
  left: 0; */
  display: none;
}
.address-apply .wrap.error-active .item.error-input{
  border: 2rpx solid #E50808;
  box-sizing: border-box;
}
.address-apply .wrap.error-active  .error{
  display: block;
}
.address-apply .tip-1{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  margin-top: 32rpx;
  margin: 32rpx 28rpx 28rpx;
}
.address-apply .btn{
  width: 638rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  background: #3260EB;
  border-radius: 54rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin: 124rpx auto 12rpx;
}
.address-apply .toast{
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    padding: 22rpx 44rpx;
    background: rgba(0, 0, 0, 0.7);
    box-shadow: 0px -2rpx 8rpx 4rpx rgba(238, 236, 236, 0.5);
    border-radius: 8rpx;
    position: fixed;
    top: 50%;
    left:50%;
    transform: translateX(-50%) translateY(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
}