/**index.wxss**/
.address-apply{
  min-height: 100vh;
  background: #F2F3F7;
  overflow: hidden;
}
.address-apply .wrap{
  width: 718rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 24rpx 16rpx;
  padding: 13rpx;
  box-sizing: border-box;
}
.address-apply .wrap .item-top{
  display: flex;
  align-items: center;
}
.address-apply .wrap .address-img{
  width: 44rpx;
  height: 50rpx;
  margin-right: 28rpx;
}
.address-apply .wrap .title{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2F2F2F;
}
.address-apply .wrap .account,.address-apply .wrap .company{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2F2F2F;
}
.address-apply .wrap .account{
  margin-top: 30rpx;
}
.address-apply .wrap .company{
  margin-top: 10rpx;
}
.address-apply .wrap .name{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  width: 158rpx;
}
.address-apply .wrap .item{
  width: 100%;
  height: 80rpx;
  border-radius: 6rpx;
  border: 2rpx solid #C9C9C9;
  box-sizing: border-box;
  padding: 0 18rpx;
  margin-top: 24rpx;
}
.address-apply .wrap .tip{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3260EB;
  margin-top: 14rpx;
}
.address-apply .wrap .item:last-child{
  margin-bottom: 24rpx;
}
.address-apply .tip-1{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(47, 47, 47, 0.6);
  margin-top: 32rpx;
  margin: 32rpx 28rpx 28rpx;
}
.address-apply .btn{
  width: 638rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  background: #3260EB;
  border-radius: 54rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin: 124rpx auto 12rpx;
}